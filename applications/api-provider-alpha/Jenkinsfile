pipeline {
    agent any
    tools {
        maven 'Maven 3.3.3'
    }
    stages {
            stage('Compile') {
                steps {
                    dir('applications/api-provider-alpha') {
                        sh 'mvn clean compile'
                    }
                }

            }
            stage('Unit Test') {
                steps {
                    dir('applications/api-provider-alpha') {
                        sh 'mvn test -P RP'
                    }
                }
            }
            stage('Quality') {
                steps {
                    dir('applications/api-provider-alpha') {
                        sh 'mvn sonar:sonar -Dsonar.projectKey=api_provider_alpha -Dsonar.host.url=http://sonar:9000 -Dsonar.login=c35e593688f22c115d459c2ffa1a8c37576f10ab'
                    }
                }
            }
            stage('Package') {
                steps {
                    dir('applications/api-provider-alpha') {
                        sh 'mvn -B -DskipTests package'
                    }
                }
            }
    }
}